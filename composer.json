{
    "name": "hiblaphp/event-loop",
    "description": "Fiber native eventloop for building block for heart of hiblaphp libraries",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hibla\\EventLoop\\": "src/"
        },
        "files": [
            "src/Boot/global-event-loop.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Reymart A. Calicdan"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-curl": "*",
        "rcalicdan/defer": "^1.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "revolt/event-loop": "^1.0",
        "react/event-loop": "^1.5",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "laravel/pint": "^1.25"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "suggest": {
        "ext-uv": "More performant event loop using libuv instead of streams"
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "format": "./vendor/bin/pint",
        "format-test": "./vendor/bin/pint --test",
        "analyze": "./vendor/bin/phpstan analyse",
        "qa": [
            "@format-test",
            "@analyze",
            "@test"
        ]
    }
}